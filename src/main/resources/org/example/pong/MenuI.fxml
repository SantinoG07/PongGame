               layoutX="120.0" layoutY="250.0"
               min="1.0" max="10.0"
               blockIncrement="1.0"
               majorTickUnit="1.0"
               minorTickCount="0"
               snapToTicks="true"
               showTickMarks="true"
               showTickLabels="true"
                   styleClass="slider"/>


      <Button fx:id="jugarButton" layoutX="260.0" layoutY="320.0" onAction="#jugarJuego" mnemonicParsing="false" text="Jugar" />

   </children>
</Pane>
