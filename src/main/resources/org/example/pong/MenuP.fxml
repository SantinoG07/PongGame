<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>

<StackPane fx:controller="org.example.pong.MenuController" xmlns:fx="http://javafx.com/fxml" prefWidth="600.0" prefHeight="400.0" stylesheets="@estilosmenu.css" >

    <VBox alignment="CENTER" spacing="20" prefWidth="400.0">
        <Text text="Pong Game">
            <font>
                <Font size="36.0" />
            </font>
        </Text>

        <VBox spacing="20" alignment="CENTER">
            <Button fx:id="jugarButton" text="Reanudar" onAction="#jugarJuego" maxWidth="300.0" styleClass="button"/>
            <Button fx:id="salir" text="Salir" onAction="#salirJuego" maxWidth="300.0" styleClass="button"/>
        </VBox>
    </VBox>
</StackPane>
