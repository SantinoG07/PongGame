<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>

<StackPane fx:controller="org.example.pong.MenuController" xmlns:fx="http://javafx.com/fxml" prefWidth="600.0" prefHeight="400.0">
    <VBox alignment="CENTER" spacing="20" prefWidth="400.0">
        <Text text="Pong Game">
            <font>
                <Font size="36.0" />
            </font>
        </Text>

        <Button fx:id="musica" text="Mute Music" onAction="#jugarJuego" maxWidth="300.0" style="-fx-font-size: 24px; -fx-padding: 10px;"/>
        <Button fx:id="efectos" text="Mute FX" onAction="#jugarJuego" maxWidth="300.0" style="-fx-font-size: 24px; -fx-padding: 10px;"/>
        <VBox spacing="20" alignment="CENTER">
            <Button fx:id="reanudar" text="Reanudar" onAction="#jugarJuego" maxWidth="300.0" style="-fx-font-size: 24px; -fx-padding: 10px;"/>
            <Button fx:id="salir" text="Salir" onAction="#salirAplicacion" maxWidth="300.0" style="-fx-font-size: 24px; -fx-padding: 10px;"/>
        </VBox>
    </VBox>
</StackPane>
