<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>

<StackPane fx:controller="org.example.pong.MenuController" xmlns:fx="http://javafx.com/fxml" prefWidth="600.0" prefHeight="400.0">
    <VBox alignment="CENTER" spacing="20" prefWidth="400.0">
        <Text text="Pong Game" styleClass="titulo"/>

        <VBox spacing="20" alignment="CENTER">
            <Button fx:id="inicioButton" text="Jugar" onAction="#subMenu" maxWidth="300.0" styleClass="jugar"/>
            <Button fx:id="salirButton" text="Salir" onAction="#salirAplicacion" maxWidth="300.0" styleClass="button"/>
        </VBox>
    </VBox>
</StackPane>